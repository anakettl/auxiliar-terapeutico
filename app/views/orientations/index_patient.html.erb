                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col">
                          <label>Orientações</label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col card-text-training">
                          <label><%= @orientations.first.description %></label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<% unless @orientation.nil? %>
  <div class="row mb-3">
    <div class="col-10">
      <%= paginate @orientation %>
    </div>
    <div class="col-2">
    </div>
  </div>
<% end %>
