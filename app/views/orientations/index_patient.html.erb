                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col">
                          <label>Orientações</label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col card-text-training">
                          <label><%= @orientations.first.description %></label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col mb-3 napsu">
      <% unless @orientations.third.nil? %>
        <%= link_to patient_training_realization_path(@patient, @orientations.third.id), { class: 'link-index-realization-patient'} do %>
          <div class="card card-index">
            <div class="card-body container">
              <div class="row">
                <div class="col">
                  <div class="card card-show text-center">
                    <div class="card-header card-header-show">
                      <h4 class="card-title-show title-training-index"><%= @orientations.third.name %><h4>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col">
                          <label>Orientações</label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col card-text-training">
                          <label><%= @orientations.first.description %></label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col mb-3 ebsu">
      <% unless @orientations.fourth.nil? %>
        <%= link_to patient_orientation_path(@patient, @orientations.fourth.id), { class: 'link-index-realization-patient'} do %>
          <div class="card card-index">
            <div class="card-body container">
              <div class="row">
                <div class="col">
                  <div class="card card-show text-center">
                    <div class="card-header card-header-show">
